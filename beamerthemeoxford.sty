\RequirePackage{fontspec}
\setmonofont[Scale=MatchUppercase]{Fira Mono}

\RequirePackage{xcolor}
\definecolor{OxfordBlue}{RGB}{0,33,71}

\setbeamerfont{title}{series=\bfseries}
